<section class="flex justify-center w-full">
    <section>
        <h1 class="text-3xl font-bold text-blue-900 text-center p-5 my-5 border-b-2 border-b-[#131176] uppercase">
            Timesheet Table
        </h1>
       
        <table class="border p-3 text-center">
            <thead class="bg-cyan-600 text-white">
              <th class="px-5 py-3 border">Name</th>
              <th class="px-5 py-3 border">Date</th>
              <th class="px-5 py-3 border">Hours Done</th>
              <th class="px-5 py-3 border">Overtime?</th>
              <th class="px-5 py-3 border">Total Hours</th>
              <th class="px-5 py-3 border">Actions</th>
            </thead>
      
            <tbody>
              <% times.reverse().forEach(log => { %>
              <tr class="hover:shadow-md hover:shadow-cyan-400">
                <td class="px-5 py-3 border"><%= log.fname %> <%=log.lname %> </td>
                <td class="px-5 py-3 border"><%=new Date(log.date).toDateString() %></td>
                <td class="px-5 py-3 border"><%=log.hours %></td>
                <td class="px-5 py-3 border"><%=log.overtime %> </td>
                <td class="px-5 py-3 border"><%=log.hours_worked %> </td>
                <td class="px-5 py-3 border"> actionsss </td>
                
              </tr>
              <% }) %>
            </tbody>
          </table>

          <div class="p-5 bg-[#EEE] font-thin text-center my-10">
            <p>Copyright @ Serhant Construction Ltd. 2022</p>
          </div>
    </section>
</section>