<section class="pt-10">
    <h1 class=" w-[60%] m-auto text-3xl font-bold text-blue-900 text-center pb-10 my-5 border-b-2 border-b-[#131176] uppercase">
        Update this Department
    </h1>
    <div class="p-8 border shadow-md w-[50%] m-auto mt-10">
        <form action="/update-department/update/update/<%=dep.id %>" method="POST">

            <div class="text-8xl text-center py-4">
                <i class="fa-solid fa-users-gear"></i>
            </div>
            
            <div class="text-xl">
                <label for="department" class="text-cyan-600 font-bold">Department Name</label>
                <input type="text" name="department" id="department" class="w-full p-1 border outline-none" value="<%=dep.department %>">
            </div>
            <div class="text-xl">
                <label for="rate" class="text-cyan-600 font-bold">Rate Per Hour</label>
                <input type="text" name="rate_per_hour" id="rate_per_hour" class="w-full p-1 border outline-none" value="<%=dep.rate_per_hour %>">
            </div>
            
            <div class="flex justify-end">
                <button type="submit" class="bg-[#131176] text-white p-3 my-3">
                    Update Department
                </button>
            </div>
        </form>
    </div>
</section>